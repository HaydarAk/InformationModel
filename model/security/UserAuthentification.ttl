@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .


ids:UserAuthentification a owl:Class;
    idsm:abstract true;
    rdfs:label "User Authentification"@en ;
    rdfs:comment "Holds User authentification information. Differs from ids:AuthInfo. This class refers to user authentication methods that are not intended for direct data exchange with a connector."@en ;
.

ids:authUsername a owl:DatatypeProperty;
    rdfs:domain ids:UserAuthentification ;
    rdfs:range xsd:string ;
    rdfs:label "auth username"@en ;
    rdfs:comment "Username / ID used for authentification."@en ;
.


ids:BasicAuthentification a owl:Class;
    # idsm:abstract true ;
    rdfs:subClassOf ids:UserAuthentification ;
    rdfs:label "User Authentification"@en ;
    rdfs:comment "Basic authentification using username / password "@en ;
    rdfs:seeAlso <https://tools.ietf.org/html/rfc7617> ;
    .

ids:authPassword a owl:DatatypeProperty;
    rdfs:domain ids:BasicAuthentification;
    rdfs:range xsd:string;
    rdfs:label "auth password" ;
    rdfs:comment "Username / ID used for authentification.";
    .

ids:HTTPAuthentification a owl:Class;
    rdfs:subClassOf ids:BasicAuthentification ;
    rdfs:label "HTTP Authentification"@en ;
    rdfs:comment "HTTP authentification."@en ;
.

ids:httpAuthURI a owl:DatatypeProperty;
    rdfs:domain ids:HTTPAuthentification;
    rdfs:range xsd:anyURI;
    rdfs:label "http auth URI"@en ;
    rdfs:comment "HTTP authentification URI."@en ;
    rdfs:seeAlso <https://tools.ietf.org/html/rfc7235> ;
.
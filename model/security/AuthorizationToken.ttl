@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/ids/core/> .
@prefix idsm: <https://w3id.org/ids/metamodel/> .
#@prefix credential: <http://www.daml.org/services/owl-s/security/credential.owl#> .

# Classes
# -------

ids:AuthorizationToken
    a owl:Class;    
    rdfs:label "Authorization Token."@en;
    rdfs:comment "Holds authentication information so that connections to the Connector's data offerings can be establised."@en ;
    idsm:validation [
        idsm:forProperty ids:tokenValue;
        idsm:constraint idsm:NotNull;
    ].

ids:AuthorizationTokenFormat a owl:Class;
    idsm:abstract true;
	rdfs:label "Authorization token format"@en;
	rdfs:comment "Authorization Token Format."@en.


# Properties
# ----------

ids:tokenValue a owl:DatatypeProperty;
	rdfs:label "tokenValue"@en;
	rdfs:domain ids:AuthorizationToken;
	rdfs:range xsd:string;
	rdfs:comment "An authorization token value like JSON Web Token."@en.

ids:tokenFormat a owl:ObjectProperty;
	rdfs:label "tokenFormat"@en;
	rdfs:domain ids:AuthorizationToken;
	rdfs:range ids:AuthorizationTokenFormat;
	rdfs:comment "Describes the format of the authorization token."@en.

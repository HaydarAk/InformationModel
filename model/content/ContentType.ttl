# Properties
# ----------

ids:homogenous
    a owl:DatatypeProperty ;
    rdfs:label "homogenous"@en ;
    rdfs:domain ids:ContentType ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Flag indicating whether the Content parts are homogenous."@en .

ids:ordered
    a owl:DatatypeProperty ;
    rdfs:label "ordered"@en;
    rdfs:domain ids:ContentType ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Property indicating whether this type of Content supports ordering in a particular way (natural and user-driven ordering)."@en .

# Renamed from orderPolicy
ids:sortOrder a owl:ObjectProperty;
    rdfs:label "sort order"@en;
    rdfs:domain ids:Ordered;
    rdfs:range ids:SortOrder;
    rdfs:comment "Indicates the sort order of an ordered Collection."@en.


@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .    
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/ids/core/> .
@prefix idsm: <https://w3id.org/ids/metamodel/> .

# Classes
# -------

# TODO, rename e.g. to "File"
ids:Artifact
    a owl:Class; # partial subclass of dcat:Distribution    
    rdfs:label "Artifact"@en ;
    rdfs:comment "Content materialized in a file, i.e. exposing properties like file name, size, creation date etc."@en.

ids:downloadUrl
    rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf dcat:downloadURL ;
    rdfs:domain ids:Artifact ;
    rdfs:range xsd:anyURI ;
    rdfs:label "Artifact"@en ;
    rdfs:comment "Literal HTTP(s) link for Artifact download."@en.

ids:byteSize
    a owl:DatatypeProperty;
    rdfs:subPropertyOf dcat:byteSize ;     
    rdfs:label "byte size"@en ;    
    rdfs:comment "Size of an artifact in bytes."@en ;  	
    rdfs:domain ids:Artifact ;
    rdfs:range xsd:nonNegativeInteger .

ids:fileName
    a owl:DatatypeProperty;    
    rdfs:label "file name"@en ;    
    rdfs:comment "Name of the artifcat file."@en ;  	
    rdfs:domain ids:Artifact ;
    rdfs:range xsd:String .

# TODO, move into a general annotation class
ids:created
    a owl:DatatypeProperty ;  
    rdfs:subPropertyOf dct:created ;
    rdfs:label "created"@en ;
    rdfs:comment "Date of creation of the Artifcat."@en ;
    # TODO, discuss about losening range
    rdfs:domain rdfs:Artifact ;
    rdfs:range xsd:dateTime .
    

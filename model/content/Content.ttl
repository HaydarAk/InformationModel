ids:contentType a owl:ObjectProperty;
    # TODO, discuss: rdfs:subPropertyOf dct:hasPart dct:type?
    rdfs:label "content type"@en;    
    rdfs:domain ids:Content;
    rdfs:range ids:ContentType;
    rdfs:comment "Reference to the abstract nature (type) of the Content."@en.


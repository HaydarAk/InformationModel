@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/ids/core/> .
@prefix idsm: <https://w3id.org/ids/metamodel/> .

# Classes
# -------

ids:InfrastructureComponent rdfs:subClassOf ids:ManagedEntity;
    a owl:Class;
    idsm:abstract true;
    rdfs:label "InfrastructureComponent"@en ;
    rdfs:comment "The class of all infrastructure components of the IDS.";
    idsm:validation [
        idsm:forProperty ids:maintainer;
        idsm:constraint idsm:NotNull;
    ];
    idsm:validation [
        idsm:forProperty ids:contentResponsibility;
        idsm:constraint idsm:NotNull;
    ];
    idsm:validation [
        idsm:forProperty ids:supportedIMVersion;
        ids:relationType idsm:OneToMany;
    ].

# Properties of InfrastructureComponent
# -------------------------------------

ids:maintainer a owl:ObjectProperty;
    rdfs:label "maintainer"@en;
    rdfs:domain ids:InfrastructureComponent;
    rdfs:range ids:Participant;
    rdfs:comment "Participant responsible for maintaining the InfrastructureComponent."@en.

ids:physicalLocation a owl:ObjectProperty;
    rdfs:label "physicalLocation"@en;
    rdfs:domain ids:InfrastructureComponent;
    rdfs:range ids:Location;
    rdfs:comment "The location where the Connector is physically deployed."@en.

ids:supportedMetadataVersion a owl:DatatypeProperty;
    rdfs:label "supportedMetadataVersion"@en;
    idsm:labelPluralForm "supportedMetadataVersions"@en;
    rdfs:domain ids:InfrastructureComponent;
    rdfs:range xsd:anyURI;
    rdfs:comment "The versions of the Information Model that are supported by the InfrastructureComponent."@en.

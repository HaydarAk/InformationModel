@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

@prefix valid: <http://industrialdataspace.org/2017/01/ids/validation#> .

# Description of this ontology
# ----------------------------

valid: a owl:Ontology;
    dct:title "The Industrial Dataspace Information Model Validation Ontology"@en;
    rdfs:comment "An ontology to annotate RDF predicates with information needed to generate an API for the Information Model.";
    dct:creator "Christian Mader" ;
    dct:creator "Jaroslav Pullmann" ;
    dct:creator "Niklas Petersen" ;
    dct:creator "Christoph Lange-Bever" ;
    dct:creator "Steffen Lohmann" ;
    dct:publisher "Fraunhofer IAIS/EIS";
    dct:publisher "Fraunhofer FIT";
    dct:date "2017-10-18";
    owl:versionInfo "0.0.1".

# Classes
# -------

valid:PropertyValidation a owl:Class;
    rdfs:label "PropertyValidation"@en ;
    rdfs:comment "The class of all property validations.".

valid:RelationType a owl:Class;
    rdfs:label "RelationType"@en ;
    rdfs:comment "The class of relation types, i.e., cardinality definitions of left and right operands of a relation.".

valid:OneToMany a valid:RelationType;
    rdfs:label "OneToMany"@en.

valid:Constraint a owl:Class;
    rdfs:label "Constraint"@en ;
    rdfs:comment "The class of contraints concerning the right operand of a relation.".

valid:NotNull a valid:RelationType;
    rdfs:label "NotNull"@en.


# Properties
# ----------

valid:validation a owl:ObjectProperty;
    rdfs:label "validation"@en;
    rdfs:domain owl:Class;
    rdfs:range valid:PropertyValidation;
    rdfs:comment "Annotates a class with a validation concerning a specific property."@en.

valid:relationType a owl:ObjectProperty;
    rdfs:label "relationType"@en;
    rdfs:domain valid:PropertyValidation;
    rdfs:range valid:RelationType;
    rdfs:comment "Specifies the relation type for a PropertyValidation."@en.


valid:constraint a owl:ObjectProperty;
    rdfs:label "constraint"@en;
    rdfs:domain valid:PropertyValidation;
    rdfs:range valid:Constraint;
    rdfs:comment "Specifies the kind of constraint for a PropertyValidation."@en.

valid:forProperty a owl:DatatypeProperty;
	rdfs:label "forProperty"@en;
	rdfs:domain valid:PropertyValidation;
	rdfs:range rdf:Property;
	rdfs:comment "The property a PropertyValidation targets."@en.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .

@prefix ids_contr: <https://schema.industrialdataspace.org/contract/> .
@prefix ids_temp: <https://schema.industrialdataspace.org/temporal/> .
@prefix ids_rule: <https://schema.industrialdataspace.org/rule/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .

# Classes
# -------

ids_contr:ServiceContract rdfs:subClassOf odrl:Policy;
    a owl:Class;
    rdfs:label "ServiceContract"@en ;
    ids_trans:isAbstract true;
    rdfs:comment "A service contract that contains rules for using a resource.";
    ids_rel:validation [
        ids_rel:forProperty ids_contr:permission;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_contr:prohibition;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_contr:AgreedContract rdfs:subClassOf odrl:ServiceContract;
    rdfs:subClassOf odrl:Agreement;
    a owl:Class;
    rdfs:label "AgreedContract"@en ;
    rdfs:comment "A service contract that has been agreed upon by parties.".

ids_contr:OfferedContract rdfs:subClassOf odrl:ServiceContract;
    rdfs:subClassOf odrl:Offer;
    a owl:Class;
    rdfs:label "OfferedContract"@en ;
    rdfs:comment "An service contract that is offered for acceptance by requesting parties."@en.

# Properties of ServiceContract
# -----------------------------

ids_contr:contractDuration a owl:ObjectProperty;
    rdfs:domain ids_contr:ServiceContract;
    rdfs:range ids_temp:TemporalEntity;
    rdfs:label "contractDuration"@en;
    rdfs:comment "The duration for which the ServiceContract is valid."@en.

ids_contr:permission rdfs:subPropertyOf odrl:permission;
    a owl:ObjectProperty;
    rdfs:label "permission"@en;
    rdfs:domain ids_contr:ServiceContract;
    rdfs:range ids_rule:Permission;
    rdfs:comment "The Permissions granted by a ServiceContract."@en.

ids_contr:prohibition rdfs:subPropertyOf odrl:prohibition;
    a owl:ObjectProperty;
    rdfs:label "prohibition"@en;
    rdfs:domain ids_contr:ServiceContract;
    rdfs:range ids_rule:Prohibition;
    rdfs:comment "The Prohibitions imposed by a ServiceContract."@en.

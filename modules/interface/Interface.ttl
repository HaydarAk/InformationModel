@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .

@prefix ids_int: <https://schema.industrialdataspace.org/interface/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .
@prefix ids_doc: <https://schema.iais.fraunhofer.de/ids/helper/documentation/> .
@prefix ids_contr: <https://schema.industrialdataspace.org/contract/> .
@prefix ids_da: <https://schema.industrialdataspace.org/dataAsset/> .

# Classes
# -------

ids_int:ServiceInterface a owl:Class;
    rdfs:label "ServiceInterface"@en;
    rdfs:comment "Conceptualization of the interchange of digital artifacts as a set of uniform operations (interactions primitives)."@en.


ids_int:Operation a owl:Class;
    rdfs:label "Operation"@en;
    rdfs:comment "Building block of an Interface; describes the interaction by defining input, output and error parameters."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_int:opLabel;
        ids_rel:constraint ids_rel:NotNull;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_int:opDescription;
        ids_rel:relationType ids_rel:OneToMany;
        ids_rel:constraint ids_rel:NotNull;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_int:input;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_int:output;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_int:Parameter a owl:Class;
    rdfs:label "Parameter"@en ;
    rdfs:comment "Parameter to interact with an Interface, i.e., input, output or fault (exception)."@en;
    ids_trans:isAbstract true;
    ids_rel:validation [
        ids_rel:forProperty ids_int:paramLabel;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_int:paramDescription;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_int:addKindSemantics;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_int:ParameterGroup a owl:Class;
    rdfs:label "ParameterGroup"@en ;
    rdfs:comment "Class of grouped parameters, according to some grouping operator."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_int:paramGroupingOperator;
        ids_rel:relationType ids_rel:NotNull;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_int:paramGroupMember;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_int:InputParameter rdfs:subClassOf ids_int:Parameter;
    a owl:Class;
    rdfs:label "InputParameter"@en ;
    rdfs:comment "Input Parameter to control an Operation."@en.

ids_int:OutputParameter rdfs:subClassOf ids_int:Parameter;
    a owl:Class;
    rdfs:label "OutputParameter"@en ;
    rdfs:comment "Result of an Operation."@en.

ids_int:Fault rdfs:subClassOf ids_int:OutputParameter;
    a owl:Class;
    rdfs:label "Fault"@en ;
    rdfs:comment "Result on Operation failure."@en.

# Properties for describing an Interface
# --------------------------------------

ids_int:operation a owl:ObjectProperty;
    rdfs:domain ids_int:ServiceInterface;
    rdfs:range ids_int:Operation;
    rdfs:label "operation"@en;
    rdfs:comment "Declares the Operation to access a DataAsset."@en.

ids_int:implementer a owl:ObjectProperty;
    rdfs:domain ids_int:ServiceInterface;
    rdfs:range ids_int:DataService;
    rdfs:label "implementer"@en;
    rdfs:comment "Links to executable service that implements an Interface."@en.

ids_int:contract a owl:ObjectProperty;
    rdfs:domain ids_int:ServiceInterface;
    rdfs:range ids_contr:Contract;
    rdfs:label "contract"@en;
    ids_doc:labelPluralForm "contracts"@en;
    rdfs:comment "The Contract regulating usage of the Interface; in addition to the contracts that may be attached to the DataAsset"@en.

# Properties for describing an Operation
# --------------------------------------

ids_int:input a owl:ObjectProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range ids_int:InputParameter;
    rdfs:label "input"@en;
    ids_doc:labelPluralForm "inputs"@en;
    rdfs:comment "Parameterizes the input of an Operation."@en.

ids_int:inputGroup a owl:ObjectProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range ids_int:ParameterGroup;
    rdfs:label "inputGroup"@en;
    rdfs:comment "Parameterizes the input of an Operation with a predefined paramter group."@en.

ids_int:output a owl:ObjectProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range ids_int:OutputParameter;
    rdfs:label "output"@en;
    ids_doc:labelPluralForm "outputs"@en;
    rdfs:comment "Holds the result of an Operation."@en.

ids_int:fault a owl:ObjectProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range ids_int:Fault;
    rdfs:label "fault"@en;
    ids_doc:labelPluralForm "faults"@en;
    rdfs:comment "Holds information when an Operation has failed."@en.

ids_int:opLabel rdfs:subPropertyOf rdfs:label;
    a owl:DatatypeProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range rdf:PlainLiteral;
    ids_doc:labelPluralForm "opLabels"@en;
    rdfs:label "opLabel"@en;
    rdfs:comment "Freetext label of the Operation as it should be shown in public indexes."@en.

ids_int:opDescription rdfs:subPropertyOf dct:description;
    a owl:DatatypeProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range rdf:PlainLiteral;
    ids_doc:labelPluralForm "opDescriptions"@en;
    rdfs:label "opDescription"@en;
    rdfs:comment "Freetext description of the Operation as it should be shown in public indexes."@en.

ids_int:semantics a owl:ObjectProperty;
    rdfs:domain ids_int:Operation;
    rdfs:range ids_int:OperationSemantics;
    rdfs:label "semantics"@en;
    rdfs:comment "Semantic meaning of the Operation."@en.

# Properties for describing a Parameter
# -------------------------------------

ids_int:paramLabel rdfs:subPropertyOf rdfs:label;
    a owl:DatatypeProperty;
    rdfs:domain ids_int:Parameter;
    rdfs:range rdf:PlainLiteral;
    rdfs:label "paramLabel"@en;
    ids_doc:labelPluralForm "paramLabels"@en;
    rdfs:comment "Freetext label of the Parameter as it should be shown in public indexes."@en.

ids_int:paramName rdfs:subPropertyOf dct:identifier;
    a owl:DatatypeProperty;
    rdfs:domain ids_int:Parameter;
    rdfs:range xsd:string;
    rdfs:label "paramName"@en;
    rdfs:comment "Name of the Parameter as it must be used in service requests."@en.

ids_int:paramDescription rdfs:subPropertyOf dct:description;
    a owl:DatatypeProperty;
    rdfs:domain ids_int:Parameter;
    rdfs:range rdf:PlainLiteral;
    rdfs:label "paramDescription"@en;
    ids_doc:labelPluralForm "paramDescriptions"@en;
    rdfs:comment "Freetext description of the Parameter as it should be shown in public indexes."@en.

ids_int:dataType a owl:ObjectProperty;
    rdfs:domain ids_int:Parameter;
    rdfs:range ids_int:ParameterDataType;
    rdfs:label "dataType"@en;
    rdfs:comment "Indicates the datatype of the Parameter."@en.

ids_int:refersTo a owl:ObjectProperty;
    ids_trans:refByURI true;
    rdfs:domain ids_int:Parameter;
    rdfs:range ids_da:Kind;
    rdfs:label "refersTo"@en;
    rdfs:comment "Indicates the Kind element to which the Parameter refers to."@en.

ids_int:addKindSemantics a owl:ObjectProperty;
    rdfs:domain ids_int:Parameter;
    rdfs:range ids_da:KindSemantics;
    rdfs:label "addKindSemantics"@en;
    rdfs:comment "Concretises semantics of a Parameter if it is more specific than the original Kind semantics."@en.

# Properties for describing a ParameterGroup
# ------------------------------------------

ids_int:paramGroupMember a owl:ObjectProperty;
    rdfs:domain ids_int:ParameterGroup;
    rdfs:range ids_int:Parameter;
    rdfs:label "paramGroupMember"@en;
    ids_doc:labelPluralForm "paramGroupMembers"@en;
    rdfs:comment "Declares a member of a ParameterGroup."@en.

ids_int:paramGroupingOperator a owl:ObjectProperty;
    rdfs:domain ids_int:ParameterGroup;
    rdfs:range ids_int:ParameterGroupingOperator;
    rdfs:label "paramGroupingOperator"@en;
    rdfs:comment "Defines the operator that relates all members of the ParameterGroup."@en.

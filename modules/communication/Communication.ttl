@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .

@prefix ids_comm: <https://schema.industrialdataspace.org/communication/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .
@prefix ids_doc: <https://schema.iais.fraunhofer.de/ids/helper/documentation/> .

# Classes
# -------

ids_comm:Communication a owl:Class;
    rdfs:label "Communication"@en;
    rdfs:comment "Means to communicate (receive / provide) resources."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_comm:interface;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_comm:Interface a owl:Class;
    rdfs:label "Interface"@en;
    rdfs:comment "Conceptualization of the interchange of digital artifacts as a set of uniform operations (interactions primitives)."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_comm:operation;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_comm:service;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_comm:Operation a owl:Class;
    rdfs:label "Operation"@en;
    rdfs:comment "Building block of an Interface; describes the interaction by defining input, output and error parameters."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_comm:opLabel;
        ids_rel:constraint ids_rel:NotNull;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_comm:opDescription;
        ids_rel:relationType ids_rel:OneToMany;
        ids_rel:constraint ids_rel:NotNull;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_comm:input;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_comm:output;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_comm:opDescription;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_comm:Parameter a owl:Class;
    rdfs:label "Parameter"@en ;
    rdfs:comment "Parameter to interact with an Interface, i.e., input, output or fault (exception)."@en;
    ids_trans:isAbstract true;
    ids_rel:validation [
        ids_rel:forProperty ids_comm:paramLabel;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_comm:paramDescription;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_comm:InputParameter rdfs:subClassOf ids_comm:Parameter;
    a owl:Class;
    rdfs:label "InputParameter"@en ;
    rdfs:comment "Input Parameter to control an Operation."@en.

ids_comm:OutputParameter rdfs:subClassOf ids_comm:Parameter;
    a owl:Class;
    rdfs:label "OutputParameter"@en ;
    rdfs:comment "Result of an Operation."@en.

ids_comm:Fault rdfs:subClassOf ids_comm:OutputParameter;
    a owl:Class;
    rdfs:label "Fault"@en ;
    rdfs:comment "Result on Operation failure."@en.

# Properties
# ----------

ids_comm:interface a owl:ObjectProperty;
    rdfs:domain ids_comm:Communication;
    rdfs:range ids_comm:Interface;
    rdfs:label "interface"@en;
    ids_doc:labelPluralForm "interfaces"@en;
    rdfs:comment "Declares Interfaces to access a DataAsset."@en.

# Properties for describing an Interface
# --------------------------------------

ids_comm:operation a owl:ObjectProperty;
    rdfs:domain ids_comm:Interface;
    rdfs:range ids_comm:Operation;
    rdfs:label "operation"@en;
    ids_doc:labelPluralForm "operations"@en;
    rdfs:comment "Declares Operations Interfaces to access a DataAsset."@en.

ids_comm:service a owl:ObjectProperty;
    rdfs:domain ids_comm:Interface;
    rdfs:range ids_comm:Service;
    rdfs:label "service"@en;
    ids_doc:labelPluralForm "services"@en;
    rdfs:comment "Links to executable services for calling an Interface."@en.

# Properties for describing an Operation
# --------------------------------------

ids_comm:input a owl:ObjectProperty;
    rdfs:domain ids_comm:Operation;
    rdfs:range ids_comm:InputParameter;
    rdfs:label "input"@en;
    ids_doc:labelPluralForm "inputs"@en;
    rdfs:comment "Parameterizes the input of an Operation."@en.

ids_comm:output a owl:ObjectProperty;
    rdfs:domain ids_comm:Operation;
    rdfs:range ids_comm:OutputParameter;
    rdfs:label "output"@en;
    ids_doc:labelPluralForm "outputs"@en;
    rdfs:comment "Holds the result of an Operation."@en.

ids_comm:fault a owl:ObjectProperty;
    rdfs:domain ids_comm:Operation;
    rdfs:range ids_comm:Fault;
    rdfs:label "fault"@en;
    ids_doc:labelPluralForm "faults"@en;
    rdfs:comment "Holds information when an Operation has failed."@en.

ids_comm:opLabel rdfs:subPropertyOf rdfs:label;
    a owl:DatatypeProperty;
    rdfs:domain ids_comm:Operation;
    rdfs:range rdf:PlainLiteral;
    ids_doc:labelPluralForm "opLabels"@en;
    rdfs:label "opLabel"@en;
    rdfs:comment "Freetext label of the Operation as it should be shown in public indexes."@en.

ids_comm:opDescription rdfs:subPropertyOf dct:description;
    a owl:DatatypeProperty;
    rdfs:domain ids_comm:Operation;
    rdfs:range rdf:PlainLiteral;
    ids_doc:labelPluralForm "opDescriptions"@en;
    rdfs:label "opDescription"@en;
    rdfs:comment "Freetext description of the Operation as it should be shown in public indexes."@en.

# Properties for describing a Parameter
# -------------------------------------

ids_comm:paramLabel rdfs:subPropertyOf rdfs:label;
    a owl:DatatypeProperty;
    rdfs:domain ids_comm:Parameter;
    rdfs:range rdf:PlainLiteral;
    rdfs:label "paramLabel"@en;
    ids_doc:labelPluralForm "paramLabels"@en;
    rdfs:comment "Freetext label of the Parameter as it should be shown in public indexes."@en.

ids_comm:paramName rdfs:subPropertyOf dct:identifier;
    a owl:DatatypeProperty;
    rdfs:domain ids_comm:Parameter;
    rdfs:range xsd:string;
    rdfs:label "paramName"@en;
    rdfs:comment "Name of the Parameter as it must be used in service requests."@en.

ids_comm:paramDescription rdfs:subPropertyOf dct:description;
    a owl:DatatypeProperty;
    rdfs:domain ids_comm:Parameter;
    rdfs:range rdf:PlainLiteral;
    rdfs:label "paramDescription"@en;
    ids_doc:labelPluralForm "paramDescriptions"@en;
    rdfs:comment "Freetext description of the Parameter as it should be shown in public indexes."@en.

ids_comm:semanticType a owl:DatatypeProperty;
    rdfs:domain ids_comm:Parameter;
    rdfs:range xsd:anyURI;
    rdfs:label "semanticType"@en;
    rdfs:comment "Links to a description of the Parameter's semantics, preferably expressed as Linked Data."@en.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix ids_content: <https://schema.industrialdataspace.org/content/> .
@prefix ids_rel: <https://schema.iais.fraunhofer.de/ids/helper/relation/> .
@prefix ids_doc: <https://schema.iais.fraunhofer.de/ids/helper/documentation/> .
@prefix ids_lang: <https://schema.industrialdataspace.org/language/> .
@prefix ids_trans: <https://schema.iais.fraunhofer.de/ids/helper/transformation/> .

# Classes
# -------

ids_content:Content a owl:Class;
    rdfs:label "Content"@en;
    rdfs:comment "Class of descriptions of a Resource per-se (data set, app)."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_content:coversLanguage;
        ids_rel:relationType ids_rel:OneToMany;
    ];
    ids_rel:validation [
        ids_rel:forProperty ids_content:keyword;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_content:Kind a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "Kind"@en;
    rdfs:comment "Class of different kinds of DataAssets, regarding, e.g., their organization or update policy."@en;
    ids_rel:validation [
        ids_rel:forProperty ids_content:kindSemantics;
        ids_rel:relationType ids_rel:OneToMany;
    ].

ids_content:Collection rdfs:subClassOf ids_content:Kind;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "Collection"@en;
    rdfs:comment "Class of Collections to organize DataAssets."@en.

ids_content:List rdfs:subClassOf ids_content:Collection;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "List"@en;
    rdfs:comment "Class of Lists to organize DataAssets."@en.

ids_content:Map rdfs:subClassOf ids_content:Collection;
    a owl:Class;
    ids_trans:isAbstract true;
    rdfs:label "Map"@en;
    rdfs:comment "Class of Maps to organize DataAssets."@en.

ids_content:Value rdfs:subClassOf ids_content:Kind;
    a owl:Class;
    rdfs:label "Value"@en;
    rdfs:comment "General class describing values provided by a DataAsset."@en.

ids_content:UpdatePolicy a owl:Class;
    rdfs:label "UpdatePolicy"@en;
    rdfs:comment "Class of defined change frequencies for DataAssets."@en.

# Properties
# ----------

ids_content:coversLanguage a owl:ObjectProperty;
    rdfs:subPropertyOf dct:language;
    rdfs:label "coversLanguage"@en;
    ids_doc:labelPluralForm "coversLanguages"@en;
    rdfs:domain ids_content:Content;
    rdfs:range ids_lang:Language;
    ids_trans:refByURI true;
    rdfs:comment "States the languages that are used by the content of the DataAsset."@en.

ids_content:origin a owl:DatatypeProperty;
    rdfs:label "origin"@en;
    rdfs:domain ids_content:Content;
    rdfs:range xsd:anyURI;
    rdfs:comment "Link to the original resource from which the content of the DataAsset has been derived or is a copy of."@en.

ids_content:kind a owl:ObjectProperty;
    rdfs:label "kind"@en;
    rdfs:domain ids_content:Content;
    rdfs:range ids_content:Kind;
    rdfs:comment "Describes the Content's Kind."@en.

ids_content:key a owl:ObjectProperty;
    rdfs:label "key"@en;
    rdfs:domain ids_content:Map;
    rdfs:range ids_content:Kind;
    rdfs:comment "Describes the type of the key that indexes a Map."@en.

ids_content:member a owl:ObjectProperty;
    rdfs:label "member"@en;
    rdfs:domain ids_content:List;
    rdfs:range ids_content:Kind;
    rdfs:comment "Describes the members of a List."@en.

ids_content:homogenous a owl:DatatypeProperty;
    rdfs:label "homogenous"@en;
    rdfs:domain ids_content:Collection;
    rdfs:range xsd:boolean;
    rdfs:comment "Indicates homogenous datatypes for all collection members."@en.

ids_content:kindSemantics a owl:ObjectProperty;
    rdfs:label "kindSemantics"@en;
    rdfs:domain ids_content:Kind;
    rdfs:range ids_content:KindSemantics;
    rdfs:comment "Indicates high-level, extendable semantics for Kinds."@en.

ids_content:orderPolicy a owl:ObjectProperty;
    rdfs:label "orderPolicy"@en;
    rdfs:domain ids_content:Collection;
    rdfs:range ids_content:OrderPolicy;
    rdfs:comment "Indicates how a collection is ordered."@en.


@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/ids/core/> .
@prefix idsm: <https://w3id.org/ids/metamodel/> .

# Classes
# -------

ids:Kind a owl:Class;
    idsm:isAbstract true;
    rdfs:label "Kind"@en;
    rdfs:comment "Class of different kinds of DataAssets, regarding, e.g., their organization or update policy."@en;
    idsm:validation [
        idsm:forProperty ids:semantics;
        idsm:relationType idsm:OneToMany;
    ];
    idsm:validation [
        idsm:forProperty ids:representation;
        idsm:relationType idsm:OneToMany;
    ].

ids:Collection rdfs:subClassOf ids:Kind;
    a owl:Class;
    rdfs:label "CollectionKind"@en;
    rdfs:comment "Class of Collections to organize DataAssets."@en.

ids:Map rdfs:subClassOf ids:Kind;
    a owl:Class;
    rdfs:label "MapKind"@en;
    rdfs:comment "Class of Maps to organize DataAssets."@en.

ids:Composite rdfs:subClassOf ids:Kind;
    a owl:Class;
    rdfs:label "Composite"@en;
    rdfs:comment "Class of composite elements a DataAsset contains of, e.g., the different information items an object is composed of."@en;
    idsm:validation [
        idsm:forProperty ids:part;
        idsm:relationType idsm:OneToMany;
    ].

ids:Value rdfs:subClassOf ids:Kind;
    a owl:Class;
    rdfs:label "Value"@en;
    rdfs:comment "Class of generic values. Either interpreted as atomic values for, e.g., map keys or composites or used when no in-depth description shall be provided."@en.

# Properties
# ----------

ids:representation a owl:ObjectProperty;
    rdfs:label "representation"@en;
    ids:labelPluralForm "representations"@en;
    rdfs:domain ids:Kind;
    rdfs:range ids:Representation;
    rdfs:comment "Representation of the DataAsset."@en.

ids:key a owl:ObjectProperty;
    rdfs:label "key"@en;
    rdfs:domain ids:Map;
    rdfs:range ids:Kind;
    rdfs:comment "Describes the type of the key that indexes a Map."@en.

ids:values a owl:ObjectProperty;
    rdfs:label "values"@en;
    rdfs:domain ids:Map;
    rdfs:range ids:Kind;
    rdfs:comment "Describes the type of the indexed values of a Map."@en.

ids:member a owl:ObjectProperty;
    rdfs:label "member"@en;
    rdfs:domain ids:Collection;
    rdfs:range ids:Kind;
    rdfs:comment "Describes the members of a Collection."@en.

ids:part a owl:ObjectProperty;
    rdfs:label "part"@en;
    ids:labelPluralForm "parts"@en;
    rdfs:domain ids:Composite;
    rdfs:range ids:Kind;
    rdfs:comment "Describes the parts of a Composite."@en.

ids:homogenous a owl:DatatypeProperty;
    rdfs:label "homogenous"@en;
    rdfs:domain ids:Collection;
    rdfs:range xsd:boolean;
    rdfs:comment "Indicates homogenous datatypes for all collection members."@en.

ids:semantics a owl:ObjectProperty;
    rdfs:label "semantics"@en;
    rdfs:domain ids:Kind;
    rdfs:range ids:KindSemantics;
    rdfs:comment "Indicates high-level, extendable semantics for Kinds."@en.

ids:orderBy a owl:ObjectProperty;
    rdfs:label "orderBy"@en;
    rdfs:domain ids:Collection;
    rdfs:range ids:Value;
    rdfs:comment "Indicates the Value that is responsible for the sort order of a Collection."@en.

ids:orderPolicy a owl:ObjectProperty;
    rdfs:label "orderPolicy"@en;
    rdfs:domain ids:Collection;
    rdfs:range ids:OrderPolicy;
    rdfs:comment "Indicates how a collection is ordered."@en.

// idsc:PermissionTemplate
// ------------------

// The PermissionTemplate is a RegEx-like representation of the possible forms, which can be inserted at the Permission position in an IDS Usage Control Template.

{
    "@type": "ids:Permission",
    "@id": "?URI",
    "ids:assigner": (idsc:PARTICIPANT_TEMPLATE),
    "ids:asignee": (idsc:PARTICIPANT_TEMPLATE),
    (
      "ids:targetArtifact": (idsc:ARTIFACT_TEMPLATE),     // # An agreement has a target ids:Artifact
    | # or
      "ids:targetContent": (idsc:CONTENT_TEMPLATE),       // An offer can also have a target ids:Resource.
    )
    "ids:action": (idsc:ACTION_TEMPLATE)
    (, "ids:constraint": (idsc:CONSTRAINT_TEMPLATE) )*      // zero or more Constraints
    (, "ids:preObligation": (idsc:OBLIGATION_TEMPLATE) )*   // zero or more Obligations which need to be fulfilled before the Usage event
    (, "ids:postObligation": (idsc:OBLIGATION_TEMPLATE) )*  // zero or more Obligations which have to be fulfilled after the Usage event
}

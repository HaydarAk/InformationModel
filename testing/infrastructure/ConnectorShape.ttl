@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#ConnectorShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Connector ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:host ;
		sh:class ids:Host ;
		sh:severity sh:Violation ;
		sh:message "An ids:host property must point from an ids:Connector to an ids:Host."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:defaultHost ;
		sh:class ids:Host ;
		sh:severity sh:Violation ;
		sh:message "An ids:defaultHost property must point from an ids:Connector to an ids:Host."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:securityProfile ;
		sh:class ids:CustomSecurityProfile ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Connector must have at exactly one ids:CustomSecurityProfile linked through the ids:securityProfile property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:authInfo ;
		sh:class ids:AuthInfo ;
		sh:severity sh:Violation ;
		sh:message "An ids:authInfo property must point from an ids:Connector to an ids:AuthInfo."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:catalog ;
		sh:class ids:Catalog ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Connector must have at exactly one ids:Catalog linked through the ids:catalog property"@en ; 
	] .


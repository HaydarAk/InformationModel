@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#OperationShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Operation ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:input ;
		sh:class ids:Parameter ;
		sh:severity sh:Violation ;
		sh:message "An ids:input property must point from an ids:Operation to an ids:Parameter."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:output ;
		sh:class ids:Parameter ;
		sh:severity sh:Violation ;
		sh:message "An ids:output property must point from an ids:Operation to an ids:Parameter."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:fault ;
		sh:class ids:Parameter ;
		sh:severity sh:Violation ;
		sh:message "An ids:fault property must point from an ids:Operation to an ids:Parameter."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:operationType ;
		sh:class ids:OperationType ;
		sh:severity sh:Violation ;
		sh:message "An ids:operationType property must point from an ids:Operation to an ids:OperationType."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:pattern ;
		sh:class ids:MessageExchangePattern ;
		sh:severity sh:Violation ;
		sh:message "An ids:pattern property must point from an ids:Operation to an ids:MessageExchangePattern."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:mandatoryInput ;
		sh:class ids:Parameter ;
		sh:severity sh:Violation ;
		sh:message "An ids:mandatoryInput property must point from an ids:Operation to an ids:Parameter."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:inputGroup ;
		sh:class ids:ParameterGroup ;
		sh:severity sh:Violation ;
		sh:message "An ids:inputGroup property must point from an ids:Operation to an ids:ParameterGroup."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:mandatoryInputGroup ;
		sh:class ids:ParameterGroup ;
		sh:severity sh:Violation ;
		sh:message "An ids:mandatoryInputGroup property must point from an ids:Operation to an ids:ParameterGroup."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:mandatoryOutput ;
		sh:class ids:Parameter ;
		sh:severity sh:Violation ;
		sh:message "An ids:mandatoryOutput property must point from an ids:Operation to an ids:Parameter."@en ; 
	] .


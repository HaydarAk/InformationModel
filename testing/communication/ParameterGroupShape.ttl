@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#ParameterGroupShape>
	a sh:NodeShape ; 
	sh:targetClass ids:ParameterGroup ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:paramGroupingOperator ;
		sh:class ids:ParameterGroupingOperator ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:ParameterGroup must have at exactly one ids:ParameterGroupingOperator linked through the ids:paramGroupingOperator property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:paramGroupMember ;
		sh:class ids:Parameter ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:ParameterGroup must have at least one ids:Parameter linked through the ids:paramGroupMember property"@en ; 
	] .


@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#HostShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Host ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:protocol ;
		sh:class ids:Protocol ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Host must have at exactly one ids:Protocol linked through the ids:protocol property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:accessUrl ;
		sh:datatype xsd:anyURI ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Host must have at exactly one xsd:anyURI linked through the ids:accessUrl property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:pathPrefix ;
		sh:datatype xsd:string ;
		sh:severity sh:Violation ;
		sh:message "An ids:pathPrefix property must point from an ids:Host to an xsd:string."@en ; 
	] .


@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#OperationBindingShape>
	a sh:NodeShape ; 
	sh:targetClass ids:OperationBinding ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:apiDocument ;
		sh:class ids:Resource ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:OperationBinding must have at exactly one ids:Resource linked through the ids:apiDocument property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:boundOperation ;
		sh:class ids:Operation ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:OperationBinding must have at exactly one ids:Operation linked through the ids:boundOperation property"@en ; 
	] .


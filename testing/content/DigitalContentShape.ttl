@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#DigitalContentShape>
	a sh:NodeShape ; 
	sh:targetClass ids:DigitalContent ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contentPart ;
		sh:class ids:DigitalContent ;
		sh:severity sh:Violation ;
		sh:message "An ids:contentPart property must point from an ids:DigitalContent to an ids:DigitalContent."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:spatialCoverage ;
		sh:class ids:SpatialEntity ;
		sh:severity sh:Violation ;
		sh:message "An ids:spatialCoverage property must point from an ids:DigitalContent to an ids:SpatialEntity."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:temporalCoverage ;
		sh:class ids:TemporalEntity ;
		sh:severity sh:Violation ;
		sh:message "An ids:temporalCoverage property must point from an ids:DigitalContent to an ids:TemporalEntity."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:language ;
		sh:class ids:Language ;
		sh:severity sh:Violation ;
		sh:message "An ids:language property must point from an ids:DigitalContent to an ids:Language."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:theme ;
		sh:class ids:Concept ;
		sh:severity sh:Violation ;
		sh:message "An ids:theme property must point from an ids:DigitalContent to an ids:Concept."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:keyword ;
		sh:datatype rdfs:Literal ;
		sh:severity sh:Violation ;
		sh:message "An ids:keyword property must point from an ids:DigitalContent to an rdfs:Literal."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:representation ;
		sh:class ids:Representation ;
		sh:severity sh:Violation ;
		sh:message "An ids:representation property must point from an ids:DigitalContent to an ids:Representation."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:defaultRepresentation ;
		sh:class ids:Representation ;
		sh:severity sh:Violation ;
		sh:message "An ids:defaultRepresentation property must point from an ids:DigitalContent to an ids:Representation."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:accrualPeriodicity ;
		sh:datatype xsd:duration ;
		sh:severity sh:Violation ;
		sh:message "An ids:accrualPeriodicity property must point from an ids:DigitalContent to an xsd:duration."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contentStandard ;
		sh:class ids:Standard ;
		sh:severity sh:Violation ;
		sh:message "An ids:contentStandard property must point from an ids:DigitalContent to an ids:Standard."@en ; 
	] .


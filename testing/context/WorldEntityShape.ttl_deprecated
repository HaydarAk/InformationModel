@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix shapes: <https://w3id.org/idsa/metamodel/shapes/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

shapes:
	a owl:Ontology ;
	sh:declare [
		sh:prefix "rdf" ;
		sh:namespace "http://www.w3.org/1999/02/22-rdf-syntax-ns#"^^xsd:anyURI ;
	] ;

	sh:declare [
		sh:prefix "ids" ;
		sh:namespace "https://w3id.org/idsa/core/"^^xsd:anyURI ;
	] .


shapes:WorldEntityShape
	a sh:NodeShape ; 
	sh:targetClass ids:WorldEntity ;

	sh:sparql [
		a sh:SPARQLConstraint ;
		sh:message "<https://w3id.org/idsa/metamodel/shapes/WorldEntityShape.ttl_deprecated> (WorldEntityShape): An ids:WorldEntity is a abstract class. Please use one of the subclasses for the generation of instances."@en ;
		sh:prefixes shapes: ;
		sh:select """
			SELECT ?this ?type
			WHERE {
				?this rdf:type ?type .
				FILTER (?type = ids:WorldEntity)
			}
		""" ;
	] .


@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#RuleShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Rule ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:action ;
		sh:class ids:Action ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Rule must have at least one ids:Action linked through the ids:action property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:assignee ;
		sh:class ids:Participant ;
		sh:severity sh:Violation ;
		sh:message "An ids:assignee property must point from an ids:Rule to an ids:Participant."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:assigner ;
		sh:class ids:Participant ;
		sh:severity sh:Violation ;
		sh:message "An ids:assigner property must point from an ids:Rule to an ids:Participant."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:targetArtifact ;
		sh:class ids:Artifact ;
		sh:severity sh:Violation ;
		sh:message "An ids:targetArtifact property must point from an ids:Rule to an ids:Artifact."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:targetContent ;
		sh:class ids:DigitalContent ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Rule must have at exactly one ids:DigitalContent linked through the ids:targetContent property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:constraint ;
		sh:class ids:Constraint ;
		sh:severity sh:Violation ;
		sh:message "An ids:constraint property must point from an ids:Rule to an ids:Constraint."@en ; 
	] .


<#PermissionShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Permission ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:duty ;
		sh:class ids:Duty ;
		sh:severity sh:Violation ;
		sh:message "An ids:duty property must point from an ids:Permission to an ids:Duty."@en ; 
	] .


<#ConstraintShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Constraint ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:leftOperand ;
		sh:class ids:LeftOperand ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Constraint must have at least one ids:LeftOperand linked through the ids:leftOperand property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:operator ;
		sh:class ids:BinaryOperator ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Constraint must have at least one ids:BinaryOperator linked through the ids:operator property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:rightOperand ;
		sh:datatype rdfs:Literal ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Constraint must have at least one rdfs:Literal linked through the ids:rightOperand property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:unit ;
		sh:class ids:Unit ;
		sh:severity sh:Violation ;
		sh:message "An ids:unit property must point from an ids:Constraint to an ids:Unit."@en ; 
	] .


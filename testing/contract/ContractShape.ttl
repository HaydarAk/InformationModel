@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#ContractShape>
	a sh:NodeShape ; 
	sh:targetClass ids:Contract ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contractStart ;
		sh:datatype xsd:dateTime ;
		sh:severity sh:Violation ;
		sh:message "An ids:contractStart property must point from an ids:Contract to an xsd:dateTime."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contractEnd ;
		sh:datatype xsd:dateTime ;
		sh:severity sh:Violation ;
		sh:message "An ids:contractEnd property must point from an ids:Contract to an xsd:dateTime."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contractDate ;
		sh:datatype xsd:date ;
		sh:severity sh:Violation ;
		sh:message "An ids:contractDate property must point from an ids:Contract to an xsd:date."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:provider ;
		sh:class ids:Participant ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Contract must not have more than one ids:Participant linked through the ids:provider property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:consumer ;
		sh:class ids:Participant ;
		sh:severity sh:Violation ;
		sh:message "An ids:consumer property must point from an ids:Contract to an ids:Participant."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contractDocument ;
		sh:class ids:TextResource ;
		sh:minCount 1 ;
		sh:maxCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Contract must have at exactly one ids:TextResource linked through the ids:contractDocument property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:contractAnnex ;
		sh:class ids:Resource ;
		sh:severity sh:Violation ;
		sh:message "An ids:contractAnnex property must point from an ids:Contract to an ids:Resource."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:permission ;
		sh:class ids:Permission ;
		sh:minCount 1 ;
		sh:severity sh:Violation ;
		sh:message "An ids:Contract must have at least one ids:Permission linked through the ids:permission property"@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:prohibition ;
		sh:class ids:Prohibition ;
		sh:severity sh:Violation ;
		sh:message "An ids:prohibition property must point from an ids:Contract to an ids:Prohibition."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:obligation ;
		sh:class ids:Duty ;
		sh:severity sh:Violation ;
		sh:message "An ids:obligation property must point from an ids:Contract to an ids:Duty."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:refersTo ;
		sh:class ids:PolicyTemplate ;
		sh:severity sh:Violation ;
		sh:message "An ids:refersTo property must point from an ids:Contract to an ids:PolicyTemplate."@en ; 
	] .



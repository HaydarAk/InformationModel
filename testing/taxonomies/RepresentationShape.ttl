@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dctype: <http://purl.org/dc/dcmitype/> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix idsm: <https://w3id.org/idsa/metamodel/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

<#DataRepresentationShape>
	a sh:NodeShape ; 
	sh:targetClass ids:DataRepresentation ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:dataType ;
		sh:datatype xsd:anyURI ;
		sh:severity sh:Violation ;
		sh:message "An ids:dataType property must point from an ids:DataRepresentation to an xsd:anyURI."@en ; 
	] ;

	sh:property [
		a sh:PropertyShape ;
		sh:path ids:dataTypeSchema ;
		sh:class ids:Resource ;
		sh:severity sh:Violation ;
		sh:message "An ids:dataTypeSchema property must point from an ids:DataRepresentation to an ids:Resource."@en ; 
	] .


